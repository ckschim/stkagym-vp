<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/button_refresh"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/refresh_button"
        android:src="@drawable/ic_menu_refresh" />

    <TextView
        android:id="@+id/substDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_refresh"
        android:layout_alignLeft="@+id/grade"
        android:layout_alignTop="@+id/button_refresh"
        android:text="@string/placeholder_date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/substData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grade"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        tools:listitem="@layout/substitutionitem" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/button_refresh"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/substDate"
        android:layout_marginLeft="3dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/grade"
        android:layout_marginLeft="3dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>